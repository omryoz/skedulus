function editService(id){
	var url=baseUrl+'services/manage_services';
	$.ajax({
		data: {'id': id},
		url: url,
		type:'GET',
		dataType:'json',
		success:function(data){
		alert(data);
		var content = eval(data);
		$.each(content,function(i,v){
			$("#id").val(v.id);
			$("#servicename").val(v.name);
			$("#type").val(v.time_type);
			$("#length").val(v.timelength);
			$("#price_type").val(v.type);
			$("#price").val(v.price);
			$("#description").val(v.details);
			if(v.ptime_after!=0 || v.ptime_before!=0){
			   $("#ptime_after").val(v.ptime_after);
			   $("#ptime_after_type").val(v.ptime_after_type);
			   $("#ptime_before").val(v.ptime_before);
			   $("#ptime_before_type").val(v.ptime_before_type);
			   $("#paddingtime").show();
			}
			$("#update").show();
			$("#insert").hide();
			$("#edit").show();
			$("#add").hide();
			$(".close").hide();
		})
		}
	})
}

function deleteService(id){
	var deleteService= confirm("Are you sure you want to delete?");
	var url=baseUrl+'services/manage_services';
	if(deleteService){
	$.ajax({
		data:{'id':id,'delete':"delete"},
		url: url,
		type:'GET',
		success:function(data){
		  location.reload(true);
		}
	})
	}
}

function editStaff(id){
